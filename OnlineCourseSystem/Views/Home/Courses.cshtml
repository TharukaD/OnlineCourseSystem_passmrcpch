@using OnlineCourseSystem.ViewModels.Course
@model IEnumerable<CourseViewModel>;
@{
    ViewData["Title"] = "Courses";
}

<!-- Breadcrumb -->
<div class="breadcrumb-bar-two">
    <div class="container">
        <div class="row align-items-center inner-banner">
            <div class="col-md-12 col-12 text-center">
                <h2 class="breadcrumb-title">Courses</h2>
                <nav aria-label="breadcrumb" class="page-breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/Home/Index">Home</a></li>
                        <li class="breadcrumb-item"><a href="/Home/Courses">Courses</a></li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- /Breadcrumb -->

<!-- services Section -->
<section class="services-section-fourteen">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 aos" data-aos="fade-up">
                <div class="section-header-fourteen">
                    <h2 style="color: #06A5A0 !important;">Our Courses</h2>
                    <p>
                       We are providing comprehensive courses set.
                    </p>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="d-flex justify-content-center">
                @if (Model.Any())
                {
                    @foreach (var course in Model)
                    {
                        <div class="col-lg-4 col-md-6 col-sm-12">
                            <a asp-route-id="@course.Id" asp-action="Course" asp-controller="Home">
                                <div class="our-services-list serviceCard">
                                    <div class="service-icons">
                                        <img src="@course.ImageUrl" style="height:220px;width:220px;" alt="service image">
                                    </div>
                                    <h4>@course.Name</h4>
                                    <p>@Html.Raw(@course.ShortDescription)</p>
                                </div>
                            </a>
                        </div>
                    }
                }
                else
                {
                    <div class="col-lg-3 col-md-4 col-sm-12 d-flex">
                        <h3>No courses found.</h3>
                    </div>
                }
            </div>
        </div>
            

    </div>
</section>
<!-- /services Section -->

<hr />

<style>
    .serviceCard:hover {
        background-color: #06A5A0 !important;
        border-color: #06A5A0 !important;
    }

    .nav-pills > li > button {
        color: #4D555F !important;
        border: 1px solid #06A5A0;
    }

    .nav-pills > li > button.active {
        background-color: #06A5A0 !important;
        color: white !important;
    }
</style>

<style>

    #IndexNavId a {
        color: #4D555F !important;
    }

    #AboutUsNavId a {
        color: #4D555F !important;
    }

    #CoursesNavId a {
        color: #06A5A0 !important;
        text-decoration: underline;
        text-underline-offset: 8px;
    }

    #ServicesNavId a {
        color: #4D555F !important;
    }

    #ArticlesNavId a {
        color: #4D555F !important;
    }

    #ContactNavId a {
        color: #4D555F !important;
    }

</style>