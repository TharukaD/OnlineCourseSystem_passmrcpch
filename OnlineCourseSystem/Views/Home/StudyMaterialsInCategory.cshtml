@using OnlineCourseSystem.ViewModels.StudyMaterial;
@model IEnumerable<StudyMaterialViewModel>
@{
	ViewData["Title"] = "Study Materials | " + @ViewBag.CategoryName;
}

<!-- Breadcrumb -->
<div class="breadcrumb-bar-two">
	<div class="container">
		<div class="row align-items-center inner-banner">
			<div class="col-md-12 col-12 text-center">
				<h4 class="breadcrumb-title" style="font-size:30px;">Study Materials ( @ViewBag.CategoryName )</h4>
				<nav aria-label="breadcrumb" class="page-breadcrumb">
					<ol class="breadcrumb">
						<li class="breadcrumb-item"><a href="/Home/Index">Home</a></li>
						<li class="breadcrumb-item"><a href="/Home/StudyMaterials">All Study Materials</a></li>
					</ol>
				</nav>
			</div>
		</div>
	</div>
</div>
<!-- /Breadcrumb -->
<!-- Page Content -->
<div class="content">
	<div class="container">

		<div class="row">
			<div class="col-md-12">

				<div class="row blog-grid-row">
					@if (Model.Any())
					{
						@foreach (var material in Model)
						{
							<div class="col-lg-4 col-md-6 col-sm-12">
								<div class="blog grid-blog">
									<div class="blog-image">
										<a asp-route-id="@material.Id" asp-action="StudyMaterial" asp-controller="Home">
											<img class="img-fluid" src="@material.ImageUrl" alt="Material Image" style="max-height:280px">
										</a>
									</div>
									<div class="blog-content">
										<h5 style="color:blue">@material.StudyMaterialTypeName</h5>
										<h3 class="blog-title"><a asp-route-id="@material.Id" asp-action="StudyMaterial" asp-controller="Home">@material.Title</a></h3>
										<p class="mb-0">@Html.Raw(@material.ShortDescription)</p>
									</div>
									<div class=" text-center">
										<a asp-route-id="@material.Id" asp-action="StudyMaterial" asp-controller="Home" class="btn btn-sm btn-primary" style="background-color: #06A5A0;border-color:#06A5A0 !important;color:white;">
											See now
										</a>
									</div>
								</div>
							</div>
						}
					}
					else
					{
						<h4 class="text-center" style="color:red">No Study Material founded...</h4>
					}
					
				</div>
		
			</div>

		</div>
	</div>
</div>
<!-- /Page Content -->

<style>

	#IndexNavId a {
		color: #4D555F !important;
	}

	#AboutUsNavId a {
		color: #4D555F !important;
	}

	#ServicesNavId a {
		color: #4D555F !important;
	}

	#CoursesNavId a {
		color: #4D555F !important;
	}

	#StudyMaterialsNavId a {
		color: #06A5A0 !important;
		text-decoration: underline;
		text-underline-offset: 8px;
	}

	#ArticlesNavId a {
		color: #4D555F !important;
	}

	#ContactNavId a {
		color: #4D555F !important;
	}

</style>

