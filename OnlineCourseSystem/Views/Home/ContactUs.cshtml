<!-- Inquery Page -->
<section class="mt-4">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 d-flex">
                <div class="card contact-form-card w-100" style="background-color:#F7F9F9">
                    <div class="card-body">
                        <div class="section-inner-header contact-inner-header">
                            <h6 style="color:#06A5A0 !important">Get in touch</h6>
                            <h2>Have Any Question?</h2>
                        </div>
                        <form method="post"
                              asp-action="CreateInquery"
                              asp-controller="Home"
                              id="CreateInqueryFormId">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="Name" class="mb-2 required"></label>
                                        <input asp-for="Name" class="form-control" placeholder="Enter Your Name" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="EmailAddress" class="mb-2 required"></label>
                                        <input asp-for="EmailAddress" class="form-control" placeholder="Enter Email Address" />
                                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="PhoneNo" class="mb-2 required"></label>
                                        <input asp-for="PhoneNo" class="form-control" placeholder="Enter Phone Number" />
                                        <span asp-validation-for="PhoneNo" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                </div>
                                <div class="col-md-12">
                                    <div class="mb-3">
                                        <label asp-for="Message" class="mb-2 required"></label>
                                        <textarea asp-for="Message" rows="4" class="form-control" placeholder="Enter your Inquery"></textarea>
                                        <span asp-validation-for="Message" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group-btn mb-0">
                                        <button type="submit" class="btn btn-primary prime-btn specialBtn" id="SubmitButtonId">Send Message</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- /Inquery Page -->


<style>
    .nav-pills > li > button {
        color: #4D555F !important;
        border: 1px solid #06A5A0;
    }

    .nav-pills > li > button.active {
        background-color: #06A5A0 !important;
        color: white !important;
    }

    .specialBtn {
        background-color: #06A5A0;
        border-color: #06A5A0 !important;
    }

    .specialBtn:hover {
        color: #06A5A0 !important;
        border-color: #06A5A0 !important
    }

    .specialBtn:disabled {
        color: #06A5A0 !important;
        border-color: #06A5A0 !important;
        background-color: #F5F5F5 !important;
    }

</style>

<style>

    #IndexNavId a {
        color: #4D555F !important;
    }

    #AboutUsNavId a {
        color: #4D555F !important;
    }

    #ServicesNavId a {
        color: #4D555F !important;
    }

    #ArticlesNavId a {
        color: #4D555F !important;
    }

    #ContactNavId a {
        color: #06A5A0 !important;
        text-decoration: underline;
        text-underline-offset: 8px;
    }

</style>

@section Scripts {
    <script>

        $('#CreateInqueryFormId').submit(function () {
            $(this).find("button[type='submit']").prop('disabled', true);
        });

        $('#CreateInqueryFormId').change(function () {
            $('#SubmitButtonId').prop('disabled', false);
        });

    </script>
}
