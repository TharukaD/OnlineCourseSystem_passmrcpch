@using OnlineCourseSystem.ViewModels;
@model ArticlesPageViewModel
@{
	ViewData["Title"] = "Study Materials";
}

<!-- Breadcrumb -->
<div class="breadcrumb-bar-two">
	<div class="container">
		<div class="row align-items-center inner-banner">
			<div class="col-md-12 col-12 text-center">
				<h2 class="breadcrumb-title">Study Materials</h2>
				<nav aria-label="breadcrumb" class="page-breadcrumb">
					<ol class="breadcrumb">
						<li class="breadcrumb-item"><a href="/Home/Index">Home</a></li>
						<li class="breadcrumb-item" aria-current="page">Study Materials</li>
					</ol>
				</nav>
			</div>
		</div>
	</div>
</div>
<!-- /Breadcrumb -->
<!-- Page Content -->
<div class="content">
	<div class="container">

		<div class="row">
			<div class="col-md-12">

				<div class="row blog-grid-row">
					@foreach (var article in Model.AllArticles)
					{
						<div class="col-lg-4 col-md-6 col-sm-12">
							<div class="blog grid-blog">
								<div class="blog-image">									
									<a asp-route-id="@article.Id" asp-action="StudyMaterial" asp-controller="Home">
										<img class="img-fluid" src="@article.ImageUrl" alt="Article Image" style="max-height:350px">
									</a>
									@* <a>
										<iframe width="420" height="345" src="https://www.youtube.com/embed/tgbNymZ7vqY">
										</iframe>
									</a> *@
								</div>
								<div class="blog-content">
									<h3 class="blog-title"><a asp-route-id="@article.Id" asp-action="StudyMaterial" asp-controller="Home">@article.Title</a></h3>
									<p class="mb-0">@Html.Raw(@article.ShortDescription)</p>
								</div>
							</div>
						</div>
					}

					<div class="col-lg-4 col-md-6 col-sm-12">
						<div class="blog grid-blog">
							<div class="blog-image">
								<a>
									<iframe width="420" height="345" src="https://www.youtube.com/embed/tgbNymZ7vqY">
									</iframe>
								</a>
							</div>
							<div class="blog-content">
								<h3 class="blog-title">
									<a>This is a test article</a>
									<span style="font-size:11px;color:blue">[Video]</span>									
								</h3>
								@* <p class="mb-0">@Html.Raw(@article.ShortDescription)</p> *@
							</div>
						</div>
					</div>

				</div>
		
			</div>

		</div>
	</div>
</div>
<!-- /Page Content -->

<style>

	#IndexNavId a {
		color: #4D555F !important;
	}

	#AboutUsNavId a {
		color: #4D555F !important;
	}

	#ServicesNavId a {
		color: #4D555F !important;
	}

	#CoursesNavId a {
		color: #4D555F !important;
	}

	#StudyMaterialsNavId a {
		color: #06A5A0 !important;
		text-decoration: underline;
		text-underline-offset: 8px;
	}

	#ArticlesNavId a {
		color: #4D555F !important;
	}

	#ContactNavId a {
		color: #4D555F !important;
	}

</style>

