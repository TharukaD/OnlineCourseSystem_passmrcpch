@using OnlineCourseSystem.ViewModels;
@using OnlineCourseSystem.ViewModels.StudyMaterial
@model StudyMaterialViewModel
@{
    ViewData["Title"] = "Article";
}

<!-- Breadcrumb -->
<div class="breadcrumb-bar-two">
	<div class="container">
		<div class="row align-items-center inner-banner">
			<div class="col-md-12 col-12 text-center">
				<h2 class="breadcrumb-title">Study Materials</h2>
				<nav aria-label="breadcrumb" class="page-breadcrumb">
					<ol class="breadcrumb">
						<li class="breadcrumb-item"><a href="/Home/Index">Home</a></li>
						<li class="breadcrumb-item"><a href="/Home/StudyMaterials">Study Materials</a></li>
						<li class="breadcrumb-item" aria-current="page">Study Material</li>
					</ol>
				</nav>
			</div>
		</div>
	</div>
</div>
<!-- /Breadcrumb -->

<!-- Page Content -->
<div class="content">
	<div class="container">

		<div class="row">
			<div class="col-md-12">
				<div class="blog-view">
					<div class="blog blog-single-post">
						<h3 class="blog-title">@Model.Title</h3>						
						@* <object data="@Model.FileUrl" width="100%" height="600" type="application/pdf">
							@Model.FileUrl
						</object>*@
						<iframe src="@Model.FileUrl"
								width="100%" height="600" frameborder="0"></iframe>
						<div class="blog-content">
							@Html.Raw(Model.LongDescription)
						</div>
					</div>
				</div>
			</div>

		</div>
	</div>

</div>
<!-- /Page Content -->
