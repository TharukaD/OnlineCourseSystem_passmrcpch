@using OnlineCourseSystem.ViewModels;
@model ArticlesPageViewModel
@{
    ViewData["Title"] = "Article";
}

<!-- Breadcrumb -->
<div class="breadcrumb-bar-two">
	<div class="container">
		<div class="row align-items-center inner-banner">
			<div class="col-md-12 col-12 text-center">
				<h2 class="breadcrumb-title">Study Materials</h2>
				<nav aria-label="breadcrumb" class="page-breadcrumb">
					<ol class="breadcrumb">
						<li class="breadcrumb-item"><a href="/Home/Index">Home</a></li>
						<li class="breadcrumb-item"><a href="/Home/StudyMaterials">Study Materials</a></li>
						<li class="breadcrumb-item" aria-current="page">Study Material</li>
					</ol>
				</nav>
			</div>
		</div>
	</div>
</div>
<!-- /Breadcrumb -->

<!-- Page Content -->
<div class="content">
	<div class="container">

		<div class="row">
			<div class="col-md-12">
				<div class="blog-view">
					<div class="blog blog-single-post">
						<div class="blog-image">
							<a>
								<iframe height="600px" width="100%" src="https://www.youtube.com/embed/tgbNymZ7vqY">
								</iframe>
							</a>
							@* <a href="javascript:void(0);"><img alt="blog-image" src="@Model.Article.ImageUrl" class="img-fluid"></a> *@
						</div>
						<h3 class="blog-title">@Model.Article.Title</h3>
						<div class="blog-info clearfix">
							<div class="post-left">
								<ul>
									<li>
										<div class="post-author">
											<a href="#"><span>@Model.Article.AuthorName</span></a>
										</div>
									</li>
									<li><i class="far fa-calendar"></i>@Model.Article.PublishedDateString</li>
								</ul>
							</div>
						</div>
						<div class="blog-content">
							@Html.Raw(Model.Article.LongDescription)
						</div>
					</div>
				</div>
			</div>

		</div>
	</div>

</div>
<!-- /Page Content -->
<style>

	#IndexNavId a {
		color: #4D555F !important;
	}

	#AboutUsNavId a {
		color: #4D555F !important;
	}

	#ServicesNavId a {
		color: #4D555F !important;
	}

	#CoursesNavId a {
		color: #4D555F !important;
	}

	#StudyMaterialsNavId a {
		color: #06A5A0 !important;
		text-decoration: underline;
		text-underline-offset: 8px;
	}

	#ArticlesNavId a {
		color: #4D555F !important;
	}

	#ContactNavId a {
		color: #4D555F !important;
	}

</style>


