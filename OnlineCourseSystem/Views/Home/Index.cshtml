                        <span class="count-icon">
                            <img src="@record.ImageUrl" alt="doctor-image" style="max-width:60px; max-height:60px;" class="img-fluid">
                        </span>
                        <div class="count-info">
                            <h3><span class="count-digit">@record.CountInfo</span> +</h3>
