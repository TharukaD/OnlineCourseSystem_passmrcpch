@section Scripts {
    <script>

        const banners = @banners;

        let counter = 1;
        const arrayLength = banners.length;

        const windowWidth = $(window).width();
        let firstImage = "url(" + banners[0].largeImageUrl + ")";
        if(windowWidth < 640){
            firstImage = "url(" + banners[0].smallImageUrl + ")";
        }

        $('#HomeBannerSectionId').css({ 'backgroundImage': firstImage, 'background-repeat': 'no-repeat', 'background-size': "cover" });
        $("#HomeBannerTitleId").text(banners[0].title);
        $("#HomeBannerTitleId").css({ 'color': banners[0].textColor });

        function changeBg(pageWidth){
            const index = counter % arrayLength;
            let bgImage = "url(" + banners[index].largeImageUrl + ")";
            if (pageWidth < 640) {
                bgImage = "url(" + banners[index].smallImageUrl + ")";
            }

            $('#HomeBannerSectionId').css({ 'backgroundImage': bgImage, 'background-repeat': 'no-repeat', 'background-size': "cover" });

            $("#HomeBannerTitleId").text(banners[index].title);
            $("#HomeBannerTitleId").css({ 'color': banners[index].textColor });

            $("#HomeBannerDescriptionId").text(banners[index].description);
            $("#HomeBannerDescriptionId").css({ 'color': banners[index].textColor });

            counter += 1;
        }

        let bgChangeInterval = setInterval(() => changeBg(windowWidth), 5000)

        $(window).resize(function () {
            clearInterval(bgChangeInterval);
            bgChangeInterval = setInterval(() => changeBg($(window).width()), 5000)
        });

    </script>
}