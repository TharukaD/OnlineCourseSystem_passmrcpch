@page
@model LoginModel


@{
    Layout = "/Views/Shared/_LoginLayout.cshtml";
    ViewData["Title"] = "Log in";
}

<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="p-5 mt-3" style="border: 1px solid #06A5A0;background-color:white">
                <h1 class="text-center" style="font-size:25px !important;font-weight:700">
                    Login to
                    <span style="color:#06A5A0">Pass</span><span>mrcpch</span>
                </h1>
                <form id="account" method="post" class="mt-3">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-2">
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-2">
                        <label asp-for="Input.Password" class="form-label">Password</label>
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <label asp-for="Input.RememberMe" class="form-label pull-right">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg mt-2 LoginBtn">Log in</button>
                    </div>
                    <div class="d-flex mt-1">
                        <p class="pull-right">
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                    </div>
                    <div class="d-flex justify-content-between mt-2">
                        <a asp-action="Index" asp-controller="Home" type="button" class="btn btn-sm btn-ghost p-1">
                            <span class="fa fa-home"></span>Back to home
                        </a>
                        <a asp-area="Identity" asp-page="/Account/Register" type="button" class="btn btn-sm registerBtn p-1">
                            <span class="fa fa-user"></span>Register New User
                        </a>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>

    .LoginBtn {
        color: white;
        background-color: #06A5A0;
        border-color: #06A5A0 !important;
    }

    .LoginBtn:hover {
        color: #06A5A0 !important;
        background-color: white !important;
        border-color: #06A5A0 !important
    }

    .registerBtn {
        color:white;
        background-color: #3D3D3D;
        border-color: #3D3D3D !important;
    }

    .registerBtn:hover {
        color: white !important;
        background-color: #666666;
        border-color: #3D3D3D !important
    }

</style>